{
  "compilerOptions": {
    "lib": ["ES6", "DOM"],
    "module": "COMMONJS",
    "target": "ES6",
    "outDir": "./build",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "jsx": "react",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build/**/*"]
}